<div class="home-page">

  <section id="home">
    <div class="home-container">
      <div class="home-navbar">
        <a href="#about">About</a>
        <a href="#skills">Skills</a>
        <a href="#work">Portfolio</a>
        <a href="#contact">Contact</a>
      </div>
      <nav id="home-nav-menu">
        <div class="navbar">
          <div class="nav-container">
            <input class="checkbox" type="checkbox" name="" id="" />
            <div class="hamburger-lines">
              <span class="line line1"></span>
              <span class="line line2"></span>
              <span class="line line3"></span>
            </div>
            <div class="menu-items">
              <a href="#home">Home</a>
              <a href="#about">About</a>
              <a href="#skills">Skills</a>
              <a href="#work">Portfolio</a>
              <a href="#contact">Contact</a>
            </div>
          </div>
        </div>
      </nav>
      <div class="home-title">
        <div id="name">Emilia Rojo</div>
        <div id="occupation">Designer & Developer</div>
      </div>
      <div class="home-image">
        <%= image_tag "home/Avatar.png", class:"avatar-image" %>
      </div>
    </div>
  </section>

  <section id="about">
    <div class="about-container">

      <div class="about-content">
        <div class="about-image">
          <%= image_tag "about/Me.png", class:"me-image" %>
        </div>
        <div class="about-info">
          <div class="about-title">
            <div class="about-header">About Me</div>
            <div class="about-title-line">
              <%= image_tag "about/Blue_Line.png", class:"blue-line-image" %>
            </div>
          </div>
          <div class="about-text">
            I'm a passionate UX/UI designer, web designer, graphic designer,
            and full-stack web developer. With a comprehensive skill set spanning
            various disciplines, I am dedicated to crafting seamless and impactful
            digital experiences. Whether it's designing intuitive user interfaces,
            developing visually stunning websites, creating captivating graphic
            designs, or building robust web applications, I thrive on the intersection
            of creativity and technology. By blending my expertise in design thinking,
            computer programming, and aesthetic sensibility, I bring ideas to
            life that engage users and exceed expectations. Let's collaborate and
            bring your vision to reality.
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="skills">
    <div class="skills-container">

      <div class="skills-content">
        <div class="skills-info">
          <div class="skills-header">
            Skills
          </div>
          <div class="skills-text">
            Here are some technologies I work with
          </div>
        </div>
        <div class="skills-icons">
          <%= image_tag "skills/Figma.png", class:"tech-icon" %>
          <%= image_tag "skills/Procreate.png", class:"tech-icon" %>
          <%= image_tag "skills/HTML.png", class:"tech-icon" %>
          <%= image_tag "skills/CSS.png", class:"tech-icon" %>
          <%= image_tag "skills/Sass.png", class:"tech-icon" %>
          <%= image_tag "skills/JavaScript.png", class:"tech-icon" %>
          <%= image_tag "skills/React.png", class:"tech-icon" %>
          <%= image_tag "skills/Rails.png", class:"tech-icon" %>
          <%= image_tag "skills/SQL.png", class:"tech-icon" %>
        </div>
      </div>
    </div>
  </section>

  <section id="work">
    <div class="work-container">

      <div class="work-content">
        <div class="work-info">
          <div class="work-header">
            As a designer & developer,
            <br>
            I wear many hats
          </div>
          <div class="work-text">
            Check out some of my work
          </div>
          <a href="/portfolio" class="profile-button">
            View Portfolio
            <i class="fa-sharp fa-solid fa-arrow-right"></i>
          </a>
        </div>
        <div class="work-image">
          <%= image_tag "work/Avatar-Hat.GIF", class:"hat-gif" %>
        </div>
      </div>
    </div>
  </section>

  <section id="contact">
    <div class="contact-container">
      <div class="contact-content">
        <div class="contact-info">
          <a href="mailto:info@emiliarojo.com" class="contact-email">
            <i class="fa-sharp fa-solid fa-envelope"></i> info@emiliarojo.com
          </a>
          <a href="https://www.linkedin.com/in/emilia-rojo/" hclass="contact-linkedin" target="_blank">
            <i class="fa-brands fa-linkedin"></i> emilia-rojo
          </a>
          <a href="https://github.com/emiliarojo" class="contact-github" target="_blank">
            <i class="fa-brands fa-github"></i> emiliarojo
          </a>
          <a href="https://dribbble.com/emiliarojo" class="contact-dribbble" target="_blank">
            <i class="fa-solid fa-basketball"></i> emiliarojo
          </a>
        </div>
      </div>
    </div>
  </section>

</div>
