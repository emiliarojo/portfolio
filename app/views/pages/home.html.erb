<div class="home-page" data-controller="bg-color-change">

  <section id="home" data-bg-color-change-target="section">
    <div class="home-container">
      <nav class="home-navbar">
        <a href="#about">About</a>
        <a href="#skills">Skills</a>
        <a href="#work">Portfolio</a>
        <a href="#contact">Contact</a>
      </nav>
      <nav id="home-nav-menu">
        <div class="navbar">
          <div class="nav-container">
            <input class="checkbox" type="checkbox" name="" id="" />
            <div class="hamburger-lines">
              <span class="line line1"></span>
              <span class="line line2"></span>
              <span class="line line3"></span>
            </div>
            <div class="menu-items">
              <a href="#home">Home</a>
              <a href="#about">About</a>
              <a href="#skills">Skills</a>
              <a href="#work">Portfolio</a>
              <a href="#contact">Contact</a>
            </div>
          </div>
        </div>
      </nav>
      <div class="home-info">
        <div class="home-title">
          <h1 id="name">Emilia Rojo</h1>
          <h2 id="occupation">Designer & Developer</h2>
        </div>
        <%= image_tag "home/Avatar.png", class:"avatar-image", alt: "Emilia Rojo Logo" %>
      </div>
    </div>
  </section>

  <section id="about" data-bg-color-change-target="section">
    <div class="about-container">

      <div class="about-content">
        <div class="about-image">
          <%= image_tag "about/Me.png", class:"me-image" %>
        </div>
        <div class="about-info">
          <div class="about-title">
            <h1 class="about-header">About Me</h1>
            <div class="about-title-line">
              <%= image_tag "about/Blue_Line.png", class:"blue-line-image" %>
            </div>
          </div>
          <p class="about-text">
            I'm a passionate UX/UI designer, graphic designer,
            and full-stack web developer. With a comprehensive skill set spanning
            various disciplines, I am dedicated to crafting seamless and impactful
            digital experiences. Whether it's designing intuitive user interfaces,
            developing visually stunning websites, creating captivating graphic
            designs, or building robust web applications, I thrive on the intersection
            of creativity and technology. By blending my expertise in design thinking,
            computer programming, and aesthetic sensibility, I bring ideas to
            life that engage users and exceed expectations. Let's collaborate and
            bring your vision to reality.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="skills" data-bg-color-change-target="section">
    <div class="skills-container">

      <div class="skills-content">
        <div class="skills-info">
          <h1 class="skills-header">
            Skills
          </h1>
          <h3 class="skills-text">
            Here are some technologies I work with
          </h3>
        </div>
        <div class="skills-icons">
          <%= image_tag "skills/Figma.png", class:"tech-icon", alt: "Figma Logo" %>
          <%= image_tag "skills/Procreate.png", class:"tech-icon", alt: "Procreate Logo" %>
          <%= image_tag "skills/HTML.png", class:"tech-icon", alt: "HTML Logo" %>
          <%= image_tag "skills/CSS.png", class:"tech-icon", alt: "CSS Logo" %>
          <%= image_tag "skills/Sass.png", class:"tech-icon", alt: "Sass Logo" %>
          <%= image_tag "skills/JavaScript.png", class:"tech-icon", alt: "JavaScript Logo" %>
          <%= image_tag "skills/React.png", class:"tech-icon", alt: "React Logo" %>
          <%= image_tag "skills/Rails.png", class:"tech-icon", alt: "Rails Logo" %>
          <%= image_tag "skills/SQL.png", class:"tech-icon", alt: "SQL Logo" %>
        </div>
      </div>
    </div>
  </section>

  <section id="work" data-bg-color-change-target="section">
    <div class="work-container">

      <div class="work-content">
        <div class="work-info">
          <h1 class="work-header">
            As a designer & developer,
            <br>
            I wear many hats
          </h1>
          <h3 class="work-text">
            Check out some of my work
          </h3>
          <a href="/portfolio" class="profile-button" text="Projects Page">
            View Portfolio
            <i class="fa-sharp fa-solid fa-arrow-right"></i>
          </a>
        </div>
        <div class="work-image">
          <%= image_tag "work/Avatar-Hat.GIF", class:"hat-gif", alt: "Emilia Rojo Logo GIF" %>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" data-bg-color-change-target="section">
    <div class="contact-container">
      <div class="contact-content">
        <div class="contact-info">
          <a href="mailto:info@emiliarojo.com" class="contact-email">
            <i class="fa-sharp fa-solid fa-envelope"></i> info@emiliarojo.com
          </a>
          <a href="https://www.linkedin.com/in/emilia-rojo/" hclass="contact-linkedin" target="_blank" text="LinkedIn Profile Link">
            <i class="fa-brands fa-linkedin"></i> emilia-rojo
          </a>
          <a href="https://github.com/emiliarojo" class="contact-github" target="_blank" text="Github Profile Link">
            <i class="fa-brands fa-github"></i> emiliarojo
          </a>
          <a href="https://dribbble.com/emiliarojo" class="contact-dribbble" target="_blank" text="Dribbble Profile Link">
            <i class="fa-solid fa-basketball"></i> emiliarojo
          </a>
        </div>
      </div>
    </div>
  </section>

</div>
